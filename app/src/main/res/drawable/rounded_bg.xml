<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners -->
    <corners android:radius="10dp" />

    <solid android:color="#3CF1EBF1" />
    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="#3CF1EBF1" />

    <!-- Optional padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>
